{
  "name": "create-webextension",
  "version": "0.1.3",
  "description": "Create a WebExtension in one command",
  "bin": {
    "create-webextension": "bin/create-webextension"
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpl/create-webextension.git"
  },
  "keywords": [
    "create-webextension",
    "webextension",
    "firefox",
    "boilerplate",
    "addon"
  ],
  "author": "Luca Greco <lgreco@mozilla.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/rpl/create-webextension/issues"
  },
  "homepage": "https://github.com/rpl/create-webextension#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "mz": "^2.6.0",
    "strip-ansi": "^3.0.1"
  },
  "devDependencies": {
    "jest": "^20.0.4",
    "xo": "^0.18.2"
  },
  "xo": {
    "space": true,
    "ignores": [
      "assets/**/*",
      "node_modules/**/*"
    ],
    "rules": {
      "quotes": [
        "error", "double",{
          "allowTemplateLiterals": true
        }
      ],
      "comma-dangle": [
        "error", "always-multiline"
      ],
      "camelcase": 0,
      "arrow-parens": 0,
      "no-process-exit": 0,
       "unicorn/no-process-exit": 0,
      "quote-props": 0,
      "unicorn/catch-error-name": 0
    }
  }
}
